# Strategy Bot Environment Variables
# Copy this file to .env and fill in your values

# Target URL
TARGET_URL=https://example.com

# Email Configuration (for alerts)
MAIL_HOST=smtp.example.com
MAIL_PORT=465
MAIL_USER=your_email@example.com
MAIL_PASS=your_app_password
MAIL_RECEIVER=receiver@example.com

# Proxy Configuration (Clash/Clash Verge/V2Ray API)
PROXY_PORT=9090
PROXY_SECRET=
PROXY_MIXED_PORT=7890

# Subscription URL (optional, for auto-update)
SUB_URL=

# Timing Configuration (minutes)
MIN_WAIT=5
MAX_WAIT=45
